{
	"manifest_version": 2,
	"name": "Chrominary",
	"description": "A simple chrome based extension to look up word meanings",
	"version": "1.0",
	"icons": {
		"48": "img/icon48.png"
	},
	"browser_action": {
		"default_icon": "img/icon48.png",
		"default_popup": "popup.html"
	},
	"permissions": [
		"https://od-api.oxforddictionaries.com:443/api/v1/*",
		"contextMenus",
		"storage"
	],
	"background": {
		"page": "background.html"
	}
}